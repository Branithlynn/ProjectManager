@using Common.Service
@model ProjectManager.ViewModel.UserVM.RegisterVM
@{
    ViewBag.Title = "REGISTER";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="container">
            
                <fieldset>
                <legend>Register</legend>
                <form action="/Users/Register" method="post">
                    <div class="grid">

                        <div class="row">

                            <div class="col-1">
                                @Html.LabelFor(m => m.Username)
                            </div>
                            <div class="col-2">
                                @Html.TextBoxFor(m => m.Username)
                            </div>
                            <div class="col-2">
                                @Html.ValidationMessageFor(m => m.Username)
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-1">
                                @Html.LabelFor(x => x.Password)
                            </div>

                            <div class="col-2">
                                @Html.PasswordFor(x => x.Password, new { autocomplete = "off" })
                            </div>
                            <div class="col-2">
                                @Html.ValidationMessageFor(x=>x.Password)
                            </div>

                        </div>
                        

                        <div class="row">

                            <div class="col-1">
                                @Html.LabelFor(x => x.FirstName)
                            </div>

                            <div class="col-2">
                                @Html.TextBoxFor(x => x.FirstName, new { autocomplete = "off" })
                            </div>
                            <div class="col-2">
                                @Html.ValidationMessageFor(x=>x.FirstName)
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-1">
                                @Html.LabelFor(x => x.LastName)
                            </div>

                            <div class="col-2">
                                @Html.TextBoxFor(x => x.LastName, new { autocomplete = "off" })
                            </div>
                            <div class="col-2">
                                @Html.ValidationMessageFor(x=>x.LastName)
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-3">
                                <div class="right">
                                    <input type="submit" value="register" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </fieldset>
        </div>