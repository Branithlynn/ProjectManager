@model Common.Entity.User
@using Common.Service
@{
    ViewData["Title"] = "";
    ViewBag.Title = "LOGIN";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="container">
    
        <fieldset>
                <legend>Loggin</legend>
                <form action="/Users/Loggin" method="post">
                    <div class="grid">

                        <div class="row">

                            <div class="col-1">
                                Username :
                            </div>

                            <div class="col-2">
                                <input type="text" name="Username" autocomplete="off" value="@ViewData["username"]"/>
                                <span class = "red">@ViewData["usernameError"]</span>
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-1">
                            Password :
                            </div>

                            <div class="col-2">
                             <input type="password" autocomplete="new-password" name="Password" value="@ViewData["password"]"/>
                             <span class = "red">@ViewData["passwordError"]</span>
                            </div>

                        </div>
                        
                        <div class="row">
                            <div class="col-3">
                                <div class="right">
                                    <input type="submit" value="login" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </fieldset>
        </div>

